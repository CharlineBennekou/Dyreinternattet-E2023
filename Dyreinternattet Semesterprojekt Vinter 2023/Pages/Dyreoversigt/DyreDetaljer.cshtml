@page "{ID:int}"
@model Dyreinternattet_Semesterprojekt_Vinter_2023.Pages.Dyreoversigt.DyreDetaljerModel
@{
}

<h1 class="Overskift">
    <strong>@Model.Dyr.Navn</strong>
    <br>
    <br>
</h1>

<div class="Dyr1">
    <div class="dyrimage1">
        <img src="@Model.Dyr.ImagePath" alt="Dyr 1 Image" />
    </div>
    <div id="@Model.Dyr.ID" class="dyrcontent">
        <div class="p4">
            <p>          
            <p>
                <div><strong>Alder:</strong> <p id="aar"> @Model.Dyr.Alder år</p></div>
            </p>
            <div class="line-1"></div>
            <p>
                <div> <strong>Vægt:</strong> <p id="aar"> @Model.Dyr.Vægt kg </p></div>
            </p>
            <div class="line-1"></div>
            <p>
                <div> <strong>Vaccineret:</strong> <p id="aar"> @Model.Dyr.VaccineStatus </p></div>
            </p>
            <div class="line-1"></div>
            <p>
                <div> <strong>Art:</strong> <p id="aar"> @Model.Dyr.Art </p></div>
            </p>
            <div class="line-1"></div>
            <p>
                <div> <strong>Race:</strong> <p id="aar"> @Model.Dyr.Race </p></div>
            </p>
            <div class="line-1"></div>
            <p><strong>Beskrivelse:</strong> </p>
            <div class="boxxx">
                <p>
                        @Model.Dyr.Beskrivelse
                </p>
            </div>
            <div class="line-1"></div>
            @if (User.Identity.IsAuthenticated) //viser kun knapper hvis bruger er authenticated
                 {
                <a class="btn btn-primary btn-sm" type="button" title="Edit"
                   asp-page="EditDyr" asp-route-id="@Model.Dyr.ID">Edit</a>
                <a class="btn btn-danger btn-sm " type="button" title="Delete"
                   asp-page="DeleteDyr" asp-route-id="@Model.Dyr.ID">Delete</a>
                }
           

        </>
    </div>
</div>

