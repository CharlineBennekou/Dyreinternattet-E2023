@page
@using Dyreinternattet_Semesterprojekt_Vinter_2023.Models.Dyreoversigt;
@using static Dyreinternattet_Semesterprojekt_Vinter_2023.Models.Dyreoversigt.Medarbejder;
@model Dyreinternattet_Semesterprojekt_Vinter_2023.Pages.Vagt.CreateVagtModel
@{
}

<h1>Create new Vagt</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Vagt.Medarbejder"></label>
        @Html.DropDownListFor(model => model.Vagt.Medarbejder, Html.GetEnumSelectList<Medarbejdere>(), "Vælg Medarbejder", new { @class = "form-control" })


    </div>
    <div class="form-group">
        <label asp-for="@Model.Vagt.StartTid" class="control-label"></label>
        <select asp-for="@Model.Vagt.StartTid" asp-items="@Model.StartTidOptions()", class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Vagt.SlutTid" class="control-label"></label>
        <select asp-for="@Model.Vagt.SlutTid" asp-items="@Model.SlutTidOptions()" class="form-control"></select>
    </div>

    <p>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </p>
</form>
