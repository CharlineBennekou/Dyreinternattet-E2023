@page
@model Dyreinternattet_Semesterprojekt_Vinter_2023.Pages.Vagt.GetAllVagterModel
@{
}
<h1> Vagtplan</h1>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th>
				Medarbejder
			</th>
			<th>
				Start tid
			</th>
			<th>
				Slut tid
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Vagter != null)
		{
			foreach (var vagt in Model.Vagter)
			{
				<tr>
					<td>
						@vagt.Medarbejder
					</td>
					<td>@FormatTid(vagt.StartTid)</td>
					<td>@FormatTid(vagt.SlutTid)</td>
				</tr>
			}
			@functions {
			string FormatTid(double tid)
			{
				var timer = (int)tid;
				var minutter = (int)((tid - timer) * 60);
				return $"{timer:D2}:{minutter:D2}";
			}
		}
		}
	</tbody>
</table>

<p>
	<a class="btn btn-primary" asp-page="CreateVagt">Tilføj en ny vagt</a>
</p>

