@page
@model Dyreinternattet_Semesterprojekt_Vinter_2023.Pages.Frivilligt.GetAllFrivilligeModel
@{
}

<h1>Se de frivillige</h1>
<div class="row">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Navn
                </th>
                <th>
                    Fødselsdag
                </th>
                <th>
                    Adresse
                </th>
                <th>
                    Telefon
                </th>
                <th>
                    Mail
                </th>
                <th>
                    Beskrivelse
                </th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.FrivList != null)
            {
                foreach (var frivillige in Model.FrivList)
                {
                    <tr>
                        <td>
                            @frivillige.Name
                        </td>
                        <td>
                            @frivillige.Birthday
                        </td>
                        <td>
                            @frivillige.Address
                        </td>
                        <td>
                            @frivillige.Tlf
                        </td>
                        <td>
                            @frivillige.Mail
                        </td>
                        <td>
                            @frivillige.Description
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>