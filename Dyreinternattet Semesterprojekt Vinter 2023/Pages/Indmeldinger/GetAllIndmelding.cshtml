@page
@model Dyreinternattet_Semesterprojekt_Vinter_2023.Pages.Indmeldinger.CreateIndmeldingModel
@{
}


<h1>Liste over indmeldinger af dyr</h1>

<div class="row">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Type
                </th>
                <th>
                    Navn
                </th>
                <th>
                    Køn
                </th>
                <th>
                    Race
                </th>
                <th>
                    Alder
                </th>
                <th>
                    Vægt
                </th>
                <th>
                    Vaccineret
                </th>
                <th>
                    Beskrivelse
                </th>
                <th>
                    Ejer
                </th>

            </tr>
        </thead>
        <tbody>
            @if (@Model.AdoptList != null)
            {
                foreach (var IndDyr in Model.AdoptList)
                {
                    <tr>
                        <td>
                            @IndDyr.DyrArt
                        </td>
                        <td>
                            @IndDyr.DyrName
                        </td>
                        <td>
                            @IndDyr.DyrGender
                        </td>
                        <td>
                            @IndDyr.Race
                        </td>
                        <td>
                            @IndDyr.Age
                        </td>
                        <td>
                            @IndDyr.Weight
                        </td>
                        <td>
                            @IndDyr.IsVac
                        </td>
                        <td>
                            @IndDyr.DyrInfo
                        </td>
                        <td>
                            <ul>

                                <li><b> Navn:</b> @IndDyr.EjerName</li>

                                <li> <b>  Adresse: </b> @IndDyr.EjerAddress </li>

                                <li> <b> Postnummer:</b> @IndDyr.EjerPost  </li>

                                <li> <b>  Tlf:</b> @IndDyr.EjerTlf</li>

                                <li> <b>  Mail:</b> @IndDyr.EjerMail </li>
                            </ul>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" type="button" title="Delete" asp-page="DeleteInd" asp-route-id="@IndDyr.ID"><i class="fa fa-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>



    </table>

</div>